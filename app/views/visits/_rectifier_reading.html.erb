<div class="flex justify-start items-center ml-4 mt-4">
  <div class="grid justify-items-center">
    <strong>RECTIFIER READING</strong>
  </div>
  <div class="flex flex-wrap ml-6">
    <div class="justify-items-center mr-3 ml-3">
      <strong>Volts</strong>
      <%= form.fields_for :questions do |question_form| %>
        <%= question_form.hidden_field :name, value: "Volts" %>
