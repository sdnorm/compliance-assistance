      <% end %>
    </div>
    <div class="justify-items-center mr-3 ml-3">
      HRS
      <%= form.fields_for :questions do |question_form| %>
        <%= question_form.hidden_field :name, value: "HRS" %>
        <%= question_form.text_field :answer, value: existing_value(@location_questions.questions, "HRS"), class: "focus:ring-indigo-500 focus:border-indigo-500 w-14 flex-auto rounded-md sm:text-sm border-gray-300" %>
      <% end %>
    </div>
  </div>
</div>