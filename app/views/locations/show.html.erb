<p id="notice"><%= notice %></p>

<div class="flex justify-center">
  <div class="text-3xl">
    <strong><%= @location.name %></strong>
  </div>
</div>

<div class="flex justify-center">
  <div>
    <p>
      <small><%= @location.address1 %> <%= @location.address2 %> <%= @location.city %>, <%= @location.state %> <%= @location.zip_code %></small>
    </p>
  </div>
</div>

<div class="flex justify-center">
  <div class="mt-3">
    <%= link_to 'Edit', edit_location_path(@location), class: "py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %> |
    <%= link_to 'Back', locations_path, class: "py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-black bg-gray-400 hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-coolGray-300" %>
  </div>
</div>

<div class="flex justify-center">
  <div class="mt-6">
    <%= link_to 'New Site Visit', new_location_visit_path(@location), class: "py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400" %>
  </div>
</div>

<div class="flex justify-start ml-3 mr-3">
  <div class="mt-3">
    <% @location.visits.each do |f| %>
      <%= link_to f.created_at, location_visit_path(f) %>
    <% end %>
  </div>
</div>